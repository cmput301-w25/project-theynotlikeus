<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_community_mood_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="#282727"
    android:elevation="4dp"
    android:padding="12dp">

    <!-- Mood icon -->
    <ImageView
        android:id="@+id/imageView_itemCommunity_moodicon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_happy_emoticon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.275" />

    <!-- Username (new addition) -->
    <TextView
        android:id="@+id/textView_itemCommunity_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imageView_itemCommunity_moodicon"
        app:layout_constraintTop_toTopOf="@id/imageView_itemCommunity_moodicon"
        android:layout_marginStart="8dp" />

    <!-- Mood title -->
    <TextView
        android:id="@+id/textView_itemCommunity_moodtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mood Title"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imageView_itemCommunity_moodicon"
        app:layout_constraintTop_toBottomOf="@id/textView_itemCommunity_username"
        android:layout_marginStart="8dp" />

    <!-- Trigger (short description) -->
    <TextView
        android:id="@+id/textView_itemCommunity_trigger"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Trigger description"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@id/imageView_itemCommunity_moodicon"
        app:layout_constraintTop_toBottomOf="@id/textView_itemCommunity_moodtitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <!-- Social situation -->
    <TextView
        android:id="@+id/textView_itemCommunity_socialsituation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Social Situation"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/imageView_itemCommunity_moodicon"
        app:layout_constraintTop_toBottomOf="@id/textView_itemCommunity_trigger"
        android:layout_marginStart="8dp" />

    <!-- Date/time -->
    <TextView
        android:id="@+id/textView_itemCommunity_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feb 01, 2025"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
