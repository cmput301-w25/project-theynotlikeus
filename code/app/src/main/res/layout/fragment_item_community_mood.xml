<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_community_mood_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#282727">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView_fragmentItemCommunity_moodicon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_happy_emoticon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_fragmentItemCommunity_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username_comminity_mood"
            android:textColor="@android:color/white"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/imageView_fragmentItemCommunity_moodicon"
            app:layout_constraintTop_toTopOf="@id/imageView_fragmentItemCommunity_moodicon"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/textView_fragmentItemCommunity_moodtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mood_title_community_mood"
            android:textColor="@android:color/white"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/imageView_fragmentItemCommunity_moodicon"
            app:layout_constraintTop_toBottomOf="@id/textView_fragmentItemCommunity_username"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textView_fragmentItemCommunity_trigger"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/trigger_description_community_mood"
            android:textColor="@android:color/white"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            app:layout_constraintStart_toEndOf="@id/imageView_fragmentItemCommunity_moodicon"
            app:layout_constraintTop_toBottomOf="@id/textView_fragmentItemCommunity_moodtitle"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textView_fragmentItemCommunity_socialsituation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/social_situation_community_mood"
            android:textColor="@android:color/white"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            app:layout_constraintStart_toEndOf="@id/imageView_fragmentItemCommunity_moodicon"
            app:layout_constraintTop_toBottomOf="@id/textView_fragmentItemCommunity_trigger"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textView_fragmentItemCommunity_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feb_01_2025_community_mood"
            android:textColor="@android:color/white"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
