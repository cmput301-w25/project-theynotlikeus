<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- RecyclerView for trigger words -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_trigger_words"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Horizontal container for buttons and EditText -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/horizontal_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Add button (comes first) -->
        <Button
            android:id="@+id/button_add_trigger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Delete button, positioned to the right of the Add button -->
        <Button
            android:id="@+id/button_delete_trigger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            app:layout_constraintStart_toEndOf="@id/button_add_trigger"
            app:layout_constraintTop_toTopOf="@id/button_add_trigger"
            app:layout_constraintBottom_toBottomOf="@id/button_add_trigger"
            android:layout_marginStart="8dp" />

        <!-- EditText for entering a new trigger word -->
        <EditText
            android:id="@+id/edittext_new_trigger"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="New Trigger Word"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/button_delete_trigger"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/button_add_trigger"
            app:layout_constraintBottom_toBottomOf="@id/button_add_trigger"
            android:layout_marginStart="8dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
